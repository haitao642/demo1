                                        if (Model.type == 1)
                                        {
                                            if (m.dec_ActualRate > m.dec_credit)
                                            {
                                                <button class="am-btn order1button" onclick="paymaster(@m.Ing_Pk_MasterID)">立即支付</button>
                                            }
                                        }
                                    }
                                    else if (m.str_Sta.ToUpper().Equals("I"))
                                    {
                                        if (m.CanPayXu == 1)
                                        {
                                            <button class="am-btn order1button" onclick="paymaster(@m.Ing_Pk_MasterID)">立即支付</button>
                                        }
                                        else
                                        {
                                            if (Model.dec_SurplusMoney > 0)
