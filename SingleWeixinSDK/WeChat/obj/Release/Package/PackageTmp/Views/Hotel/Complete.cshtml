@{
    ViewBag.Title = "View";
}
@using Model
@model Model.OrderSuccessM
<!doctype html>
<html class="no-js">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="">
    <meta name="keywords" content="">
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0;" name="viewport" />
    <title>@Model.str_StoreName</title>

    <link rel="stylesheet" href="/Content/amazeui.min.css">
    <link rel="stylesheet" href="/Content/app.css">
    <link rel="stylesheet" href="~/Content/public.css">
    <link href="/Content/bootstrap.min.css" rel="stylesheet">
    <!--[if (gte IE 9)|!(IE)]><!-->
    <script src="/Scripts/jquery-1.10.2.min.js"></script>
    <!--<![endif]-->
    <!--[if lte IE 8 ]>
    <script src="http://libs.baidu.com/jquery/1.11.3/jquery.min.js"></script>
    <script src="http://cdn.staticfile.org/modernizr/2.8.3/modernizr.js"></script>
    <script src="assets/js/amazeui.ie8polyfill.min.js"></script>
    <![endif]-->
    <script src="/Scripts/amazeui.min.js"></script>
    <script src="/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/layer/layer.js"></script>
</head>
<body>
    @*<div data-am-sticky>
            <div class="am-u-sm-12 am-vertical-align" style="height:55px;text-align:center;background-color:rgba(51,51,51,0.2);">
                <text class="am-vertical-align-middle" style="">东方巴黎酒店</text>
            </div>
        </div>*@
    <div data-am-sticky>
        <div class="header">
            <div class="am-u-sm-2 am-vertical-align" style="height:100%;text-align:center;">
                @*<img class="img_back am-vertical-align-middle" src="~/Images/back.png" />
                <text class="am-vertical-align-middle" style="font-size:16px;color:#ffffff;">返回</text>*@
            </div>
            <div class="am-u-sm-8 am-vertical-align" style="height:100%;text-align:center;">
                <text class="am-vertical-align-middle" style="font-size:16px;color:#ffffff;">预订成功</text>
            </div>
            <div class="am-u-sm-2" style="height:100%;">
            </div>
        </div>
    </div>
    <div class="am-g" style="padding:10px!important;">
        <div class="am-u-sm-12 " style="text-align:center;margin-top:20px!important;">
            <img src="~/Images/ordersuccess.jpg" /><br />
        </div>
        <div class="am-u-sm-12 " style="text-align:center;margin-top:20px!important;">
            <span style="font-size:16px;font-weight:bold;">您的订单已经预订成功了!</span>
        </div>
        <div class="am-u-sm-12 " style="text-align:center;margin-top:10px!important;">
            <span style="font-size:12px;color:#808080;">房间保留至 @Model.dt_Res.ToString("MM-dd HH:mm")<br />您可以预付房费整晚保留房间。</span>
        </div>
        <div class="am-u-sm-12 " style="text-align:center;margin-top:20px!important;">
            <button type="button" class="am-btn" style="width:250px;background:#E1662D;color:#fff;font-weight:bold;border-radius:5px;" onclick="paymaster('@Model.MasterID')" >立即支付</button>
        </div>
        <div class="am-u-sm-12 " style="height:1px;border-top:1px solid #d5d5d5;margin-top:20px!important;">
        </div>
        <div class="am-u-sm-12" >
            <div class="am-u-sm-6" style="height:60px;">
                <text style="font-size:12px;color:#808080;vertical-align:middle;line-height:30px;"><span style="font-size:14px;color:#000;font-weight:bold;">@Model.str_StoreFullName</span><br />@Model.RoomTypeName</text>
            </div>
            <div class="am-u-sm-6" style="height:60px;" onclick="OrderDetail()">
                <text style="font-size:14px;color:#E1662D;vertical-align:middle;line-height:60px;float:right;">订单详情<span class="am-icon-angle-right" style="margin-left:5px;"></span></text>
            </div>
        </div>
        <div class="am-u-sm-12 " style="height:1px;border-top:1px solid #d5d5d5;">
        </div>
    </div>
    <script>
        function OrderDetail() {
            location.href = "/OrderDetail/Complete/"+'@Model.MasterID';
        }
        function paymaster(id) {
            var url = '/JSSDK/PayMaster?storeid=' + '@Model.Ing_StoreID' + "&masterid=" + id;
            window.location.href = url;
        }
    </script>
</body>
</html>